<Window x:Name="window" x:Class="SvodExcel.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvodExcel"
        mc:Ignorable="d"
        Title="Загрузка" Height="50" Width="270" ShowInTaskbar="False" ResizeMode="NoResize" Icon="Images/update.png" WindowStyle="None" Activated="Window_Activated" WindowStartupLocation="CenterOwner">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <ProgressBar x:Name="PB" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="250" IsIndeterminate="true" />
        <Label x:Name="ProgressText" Content="Прогресс" Margin="10" HorizontalAlignment="Center"/>
    </Grid>
</Window>

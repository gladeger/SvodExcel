<Window x:Name="SvodExcel" x:Class="SvodExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvodExcel"
        mc:Ignorable="d"
        Title="Сonsolidated Excel" Height="450" Width="800">
    <Grid>
        <Menu x:Name="menu" Height="28" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click_Exit"/>
            </MenuItem>
            <MenuItem Header="Imput">
                <MenuItem Header="Single manual entry"/>
                <MenuItem Header="Import from Excel" IsEnabled="False"/>
                <MenuItem Header="Free entry into the table" IsEnabled="False"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="386" Margin="0,33,0,0" VerticalAlignment="Top" Width="792">
            <TabItem x:Name="ImportTab" Header="Import">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="ExportTab" Header="View All Data" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>

<Window x:Name="SvodExcel" x:Class="SvodExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvodExcel"
        mc:Ignorable="d"
        Title="Сonsolidated Excel" Height="450" Width="800" Icon="excel_import.ico" MinWidth="800" MinHeight="450" Closed="SvodExcel_Closed">
    <Grid>
        <Menu x:Name="menu" Height="28" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="MenuItem_Click_Exit"/>
            </MenuItem>
            <MenuItem Header="Ввод данных">
                <MenuItem Header="Ручной ввод по одному" Click="MenuItemSingleInput_Click"/>
                <MenuItem Header="Импорт из Excel" IsEnabled="False"/>
                <MenuItem Header="Свободный ввод в таблицу" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Menu x:Name="menu_Hot" Height="28" VerticalAlignment="Top" Margin="0,28,0,0">
            <Button x:Name="buttonExportHot" IsEnabled="False">
                <Image Source="excel_import.ico" />
            </Button>
            <Button x:Name="buttonSingleInputHot" Click="MenuItemSingleInput_Click">
                <Image Source="SingleInput.png" />
            </Button>
            <Button x:Name="buttonMultiInputHot" IsEnabled="False">
                <Image Source="MultiInputp.png" />
            </Button>
        </Menu>

        <TabControl x:Name="tabControl" Margin="0,61,0,0">
            <TabItem x:Name="ExportTab1" Header="Экспорт">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGrid" Margin="0,0,0,72">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Дата проведения "/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Время проведения"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Преподаватель"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Номер группы"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Категория слушателей"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Место проведения"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="buttonExport"  Margin="243,0,243,10" Height="57" Width="300" VerticalAlignment="Bottom" IsDefault="True" IsEnabled="False">
                        <Grid Margin="0,0,0,0" Width="290">
                            <TextBlock Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center">Отправить данные в общий файл</TextBlock>
                            <Image Source="Upload.png" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </Grid>                        
                    </Button>
                </Grid>
            </TabItem>
            <TabItem x:Name="ExportTab" Header="Просмотр всех данных" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
